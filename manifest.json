{
  "manifest_version": 3,
  "name": "Search navigator",
  "version": "1.9.0",
  "description": "Navigate search results with shortcuts",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16x16.png",
      "48": "icon48x48.png",
      "128": "icon128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.youtube.com/results*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "activeTab", "tabs"],
  "icons": {
    "16": "icon16x16.png",
    "32": "icon32x32.png",
    "48": "icon48x48.png",
    "128": "icon128x128.png"
  }
}
